@model Blog

@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .blog-info{
        display:flex;
        justify-content:space-evenly;
        align-items:center;
        margin-bottom:12px;
    }

    .blog-info-details{
        display:flex;
        justify-content:space-evenly;
        align-items:center;
        color:dimgray; 
        font-weight:300; 
        font-size:1.2rem;
    }

    .blog-info-details i{
        margin-right:5px;
    }
    .blogdt-img-custom {
        width:100%;
        height:650px;
    }
</style>

    <!--page-title area-->
    <section class="page-title-area">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-inner">
                        <h2 class="page-title">BLOG SINGLE</h2>
                        <ul class="page-list">
                            <li><a href="/Home/Index">Home</a></li>
                            <li>Blog Single</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--page-title area end--> 

    <div class="main-blog-area pd-bottom-120">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-blog-area">
                        <div class="single-blog">
                            <div class="thumb text-center">
                                <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Image)" class="blogdt-img-custom" alt="img">
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-lg-10">
                                    <div class="details">
                                        <h5 class="text-center"><a href="#">@Model.Title</a></h5>
                                        <div class="blog-info">
                                            <div class="blog-info-details">
                                                <i class='bx bx-calendar-event'></i>
                                                <span class="text-center"> @Model.Date.ToString("dd-MM-yyyy")</span>
                                            </div>
                                            <div class="blog-info-details">
                                                <i class='bx bxs-user'></i>
                                                <span class="text-center" style="font-weight:700;"> @Model.Views</span>
                                            </div>
                                        </div>
                                        <p class="content">@Model.Content</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-lg-10">
                                <div class="post-check">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="blog-checker">
                                                <a href="#">
                                                    <i class="la la-angle-left"></i>
                                                    <span>
                                                        <span class="post-checker">Previous Post</span>
                                                        <span>Education for every child <br> 2020.</span>
                                                    </span>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="blog-checker text-md-right">
                                                <a href="#">
                                                    <span class="order-md-first order-last">
                                                        <span class="post-checker">Next Post</span>
                                                        <span>Education for every child <br> 2020.</span>
                                                    </span>
                                                    <i class="la la-angle-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
