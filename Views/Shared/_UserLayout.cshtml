
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="icon" href="~/MainPageTemplate/assets/img/logo_icon.png">
    <title>BillAir - Travel Agency</title>
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/MainPageTemplate/assets/css/vendor.css">
    <link rel="stylesheet" href="~/MainPageTemplate/assets/css/style.css">
    <link rel="stylesheet" href="~/MainPageTemplate/assets/css/responsive.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>

    <!-- preloader area start -->
    <div class="preloader" id="preloader">
        <div class="preloader-inner">
            <div class="spinner">
                <div class="dot1"></div>
                <div class="dot2"></div>
            </div>
        </div>
    </div>
    <div class="body-overlay" id="body-overlay"></div>
    <!-- preloader area End -->

    <!-- navbar start -->
    <div class="navbar-area">
        <nav class="navbar navbar-expand-lg">
            <div class="container nav-container">
                <div class="responsive-mobile-menu">
                    <button class="menu toggle-btn d-block d-lg-none" data-target="#eventa7_main_menu" 
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-left"></span>
                        <span class="icon-right"></span>
                    </button>
                </div>
                <div class="logo">
                    <a class="main-logo" href="/Home/Index"><img src="~/MainPageTemplate/assets/img/logo_.png" alt="img" style="width:150px;"></a>
                    <a class="sticky-logo" href="/Home/Index"><img src="~/MainPageTemplate/assets/img/logo_2.png" alt="img" style="width:150px;"></a>
                </div>
                <div class="nav-right-part nav-right-part-mobile">
                    <a class="btn btn-red" asp-controller="Account" asp-action="Login">Login</a>
                </div>
                <div class="collapse navbar-collapse" id="eventa7_main_menu">
                    <ul class="navbar-nav menu-open
                        <li><a href="/Home/Index">Home</a></li>
                        <li><a href="/Ticket/Tickets">Tickets</a></li>
                        <li class="menu-item-has-children current-menu-item">
                            <a href="#">Pages</a>
                            <ul class="sub-menu">
                                <li><a href="/Blog/Blogs">Blogs</a></li>
                                <li><a href="/Ticket/Tickets">Tickets</a></li>
                            </ul>
                        </li>
                        <li><a href="/About/Index">About Us</a></li>
                        <li><a href="/Contact/Index">Contact</a></li>
                        @if(User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="auth-user">
                                    <div>
                                        <span><i class='bx bx-user-circle' style="margin-right:5px;"></i></span>
                                        <span>@User.Identity.Name</span>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="nav-right-part nav-right-part-desktop">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-red" asp-controller="Account" asp-action="LogOut">Log Out</a>
                    }
                    else
                    {
                        <a class="btn btn-red" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </div>

    @RenderBody()

        <footer class="footer-area bg-red">
        <div class="container">
            <div class="footer-top">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="widget widget_about">
                            <div class="thumb">
                                <img src="~/MainPageTemplate/assets/img/logo_2.png" style="width:200px;" alt="img">
                            </div>
                            <div class="details">
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                                <ul class="social-area">
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h4 class="widget-title">Usefull Links</h4>
                        <div class="widget widget_nav_menu">
                            <ul>
                                <li><a href="#">Extroadinary life events.</a></li>
                                <li><a href="#">Design your perfect event.</a></li>
                                <li><a href="#">Connect your worlds.</a></li>
                                <li><a href="#">Improving workplace productivity.</a></li>
                                <li><a href="#">Privacy</a></li>
                                <li><a href="#">Terms of Use.</a></li>
                                <li><a href="#">Site Map </a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <h4 class="widget-title">Our newsletter</h4>
                        <div class="widget widget_subscribe">
                            <p>Subscribe to our newsletter</p>
                            <div class="subscribe-inner">
                                <input type="text" placeholder="Email">
                                <button><i class="fa fa-arrow-right"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom text-center">
            <div class="container">
                <p>© @DateTime.Now.Year / All rights reserved</p>
            </div>
        </div>
    </footer>
    <!-- footer area end -->

    <!-- back to top area start -->
    <div class="back-to-top">
        <span class="back-top"><i class="fa fa-angle-up"></i></span>
    </div>
    <!-- back to top area end -->


    <!-- all plugins here -->
    <script src="~/MainPageTemplate/assets/js/vendor.js"></script>
    <!-- main js  -->
    <script src="~/MainPageTemplate/assets/js/main.js"></script>
    <script src="~/Common/jquery/jquery.js"></script>
</body>
</html>
