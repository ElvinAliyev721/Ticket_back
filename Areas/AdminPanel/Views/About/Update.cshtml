@model About
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-6 d-flex align-items-stretch">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update</h4>
                        <img src="~/img/@Model.Image" style="width:150px;object-fit: cover;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo">Şəkil</label>
                        <input asp-for="Photo" class="form-control" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger"></span>

                        <label asp-for="Title">Başlıq</label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title"></span>

                        <label asp-for="Description">Mətn</label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="btn btn-warning mr-2">Upload</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>