@model About
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group m-2">
                        <label asp-for="Photo" class="text-dark">Images</label>
                        <input asp-for="Photo" accept="image/*" class="form-control">
                        <span asp-validation-for="Photo" class="text-danger"></span>

                        <label asp-for="Title" class="text-dark">Title</label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger"></span>

                        <label asp-for="Description" class="text-dark">Description</label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark mr-2">Save</button>
                    <button asp-action="Index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>